doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src="js/login.js")
    link(rel='stylesheet' href="css/login.css")
  body
    .container
      button#myBtn.btn.btn-default.btn-lg(type='button') Login
      #myModal.modal.fade(role='dialog')
        .modal-dialog
          .modal-content
            .modal-header(style='padding:35px 50px;')
              button.close(type='button', data-dismiss='modal') &times;
              h4
                span.glyphicon.glyphicon-lock
                |  Login
            .modal-body(style='padding:40px 50px;')
              form(role='form')
                .form-group
                  label(for='usrname')
                    span.glyphicon.glyphicon-user
                    |  Username
                  input#usrname.form-control(type='text', placeholder='Enter email')
                .form-group
                  label(for='psw')
                    span.glyphicon.glyphicon-eye-open
                    |  Password
                  input#psw.form-control(type='text', placeholder='Enter password')
                .checkbox
                  label
                    input(type='checkbox', value='', checked='')
                    | Remember me
                button.btn.btn-success.btn-block(type='submit')
                  span.glyphicon.glyphicon-off
                  |  Login
            .modal-footer
              button.btn.btn-danger.btn-default.pull-left(type='submit', data-dismiss='modal')
                span.glyphicon.glyphicon-remove
                |  Cancel
              p
                | Not a member?
                a(href='#') Sign Up
              p
                | Forgot
                a(href='#') Password?
